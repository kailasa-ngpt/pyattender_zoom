# NocoDB Configuration
NOCODB_URL=https://example.com
NOCODB_TOKEN=your_nocodb_token_here

# API Key Authentication
API_KEY=your_api_key_here
API_KEY_ENABLED=true
API_KEY_HEADER_NAME=x-api-key

# Zoom Webhook Secret for verification
# Legacy format (still supported for backward compatibility)
ZOOM_WEBHOOK_SECRET=your_zoom_webhook_secret

# Zoom Custom Header Authentication
ZOOM_CUSTOM_HEADER_ENABLED=true
ZOOM_CUSTOM_HEADER_KEY=x-zoom-custom-auth
ZOOM_CUSTOM_HEADER_VALUE=your_custom_header_value_here

# New multi-token format with verification status
# Format: token|verification_status (true/false)
ZOOM_WEBHOOK_SECRET_1=your_first_token|false
ZOOM_WEBHOOK_SECRET_2=your_second_token|false
ZOOM_WEBHOOK_SECRET_3=your_third_token|false

# Google Gemini API Key
GOOGLE_API_KEY=your_gemini_api_key

# Optional: Table IDs (default values provided)
ROSTER_TABLE_ID=m1848aw7em1uz9g
ATTENDANCE_TABLE_ID=mbur916jgs0m7ua
UNIDENTIFIED_TABLE_ID=mhsf4s0jhp90gnn

# AI Matching Configuration
USE_AI_MATCHING=true
CONFIDENCE_THRESHOLD=0.6

# Debug Configuration
DEBUG_MODE=true

# Cache Configuration
ROSTER_CACHE_SECONDS=1800